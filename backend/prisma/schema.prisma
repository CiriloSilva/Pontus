generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      String    @default("user")
  registros Registro[]
  cards    Card[]
  createdAt DateTime  @default(now())
}

model Card {
  uid     String  @id
  user    User?   @relation(fields:[userId], references:[id])
  userId  Int?
  createdAt DateTime @default(now())
}

model Registro {
  id        Int       @id @default(autoincrement())
  uid       String
  timestamp DateTime
  device    String?
  user      User?     @relation(fields:[userId],references:[id])
  userId    Int?
  createdAt DateTime  @default(now())
}
